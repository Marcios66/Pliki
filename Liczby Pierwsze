#include <iostream>
using namespace std;

int main()
{
    int n;
    int lp = 0;
    int x;
    int p = 2;
    cout<< "Wpisz ile liczb pierwszych chcesz: ";
    cin >> n;
    cout << "Liczby pierwsze: ";
    while (lp < n)
    {
        x = 0;
        for (int d = 2; d <= p - 1; d++)
        {
            if (p % d == 0)
            {
                x = 1;
            }
        }

        if (x == 0)
        {
            cout << p<<",";
            lp = lp + 1;
        }
        p++;
    }

}
